
<div class="breadcrumb"> 
     <% make_breadcrumb %> 
    <%= render_breadcrumbs %>
</div>
 <%= will_paginate @customers %>

<h3>Customer Application</h3>

<table class="table table-bordered table-hover">
  <tr>
    <th>Sl No</th>
    <th>Customer Name</th>
    <th>Username</th>
    <th>Application Number</th>
    <th>Application Status</th>
  </tr>

<% @customers.each_with_index do |customer,i| %>
  <tr style="color:#000;">
            <td><%=h (i+1) %></td>

      <td><%=h customer.first_name %> <%=h customer.last_name %></td>
            <td><%=h customer.user.username %></td>

      <td><%=h customer.application_number %></td>
      <td><%=h customer.application_status %></td>
            <td><%=link_to "View" ,customer %></td>
              <% if permitted_to? :destroy, :customers %>

                  <td><%=link_to "Delete",customer,:confirm => 'Are you sure?', :method => :delete %></td>
              <% end %>

  </tr>
<% end %>
</table>



