<div class="breadcrumb"> 
     <% make_breadcrumb %> 
    <%= render_breadcrumbs %>
</div>
<h3>Add Employee</h3>
<% form_for @employee, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
      <%= f.label :first_name %><br/>
      <%= f.text_field :first_name %>
            
  </div>    
  <div class="form-group">
    <%= f.label :middle_name %><br/>
    <%= f.text_field :middle_name %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>   
  <div class="form-group">
    <%= f.label :date_of_birth, "Date of Birth" %><br />
    <%= f.date_select :date_of_birth, :start_year=>1900 %>     
  </div>
  <div class="form-group">
  <%= f.label :email %><br/>
  <%= f.text_field :email, :id=>"email" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br/>
    <%= f.text_field :address %>
  </div>
<div class="form-group">

<%= f.label :Nationality %><br/>
<%= f.select:nationality, options_for_select(@nationalities.map {|n| [(n.name),n.id]}),{:include_blank => "Choose Nationality"}%>
                </div>   
  <div class="form-group">
    <%= f.label :contact_number %><br/>
    <%= f.text_field :contact_number %>
  </div>
  <div class="form-group">
   <div class="field">
    <%= f.label "Admin User?" %> <br />
    <%= f.check_box :manager %> <br />
</div>
  </div>
<div class="form-group">
     <%= f.label :photo, "Upload Profile photo" %>
     <%= f.file_field :photo %>
  </div>
<%= f.submit "Create my account", :class => "btn btn-large btn-primary" %>
<% end %>

